<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DantecMarket.Vues.RecherchePage"
             BackgroundColor="#E3E3E3">

    <ScrollView>
        <StackLayout Spacing="20">
            
            <!-- Barre de navigation personnalisée -->
            <Grid BackgroundColor="#2D2D2D" HeightRequest="75">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Espace pour les éléments à gauche -->
                <Label Text="" TextColor="White" HorizontalOptions="Start" VerticalOptions="Center" Grid.Column="0" />

                <!-- Logo au milieu -->
                <Frame HeightRequest="70" 
                       WidthRequest="70"
                       CornerRadius="50" 
                       Padding="0" 
                       IsClippedToBounds="True" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" 
                       BackgroundColor="White" 
                       HasShadow="False"
                       Grid.Column="1">
                    <!-- Image carrée à l'intérieur du cercle -->
                    <Image Source="logo.png" Aspect="AspectFill"/>
                </Frame>

                <!-- Espace pour les éléments à droite -->
                <Label Text="" TextColor="White" HorizontalOptions="End" VerticalOptions="Center" Grid.Column="2" />
            </Grid>

            <!-- Barre de recherche -->
            <Frame CornerRadius="20" Padding="0" HasShadow="False" BackgroundColor="#A49C9C">
                <!-- Utilisez Frame pour arrondir les coins -->
                <SearchBar BackgroundColor="Transparent" Placeholder="RECHERCHER UN PRODUIT" HorizontalOptions="FillAndExpand"/>
            </Frame>

            <!-- Titre de la section -->
            <Label Text="Parcourir les catégories" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" />

            <!-- Grille pour les catégories -->
            <Grid ColumnSpacing="20" RowSpacing="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Catégorie 1 -->
                <Frame Grid.Column="0" Grid.Row="0" Padding="10" CornerRadius="10">
                    <StackLayout>
                        <Image Source="categorie1.png" Aspect="AspectFill" />
                        <Label Text="Épicerie sucrée" HorizontalTextAlignment="Center" />
                    </StackLayout>
                </Frame>

                <!-- Catégorie 2 -->
                <Frame Grid.Column="1" Grid.Row="0" Padding="10" CornerRadius="10">
                    <StackLayout>
                        <Image Source="categorie2.png" Aspect="AspectFill" />
                        <Label Text="Épicerie salée" HorizontalTextAlignment="Center" />
                    </StackLayout>
                </Frame>

                <!-- Catégorie 3 -->
                <Frame Grid.Column="2" Grid.Row="0" Padding="10" CornerRadius="10">
                    <StackLayout>
                        <Image Source="categorie3.jpg" Aspect="AspectFill" />
                        <Label Text="Boissons" HorizontalTextAlignment="Center" />
                    </StackLayout>
                </Frame>

                <!-- Catégorie 4 -->
                <StackLayout Grid.Column="0" Grid.Row="1" Padding="10">
                    <ImageButton Source="boissons.jpg"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                                 />
                </StackLayout>

            </Grid>

        </StackLayout>
    </ScrollView>

</ContentPage>