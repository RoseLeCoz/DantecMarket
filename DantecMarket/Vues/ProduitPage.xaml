<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DantecMarket.Vues.ProduitPage"
             Title="ProduitPage">
    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">
            <Image Source="categorie3.jpg" Aspect="AspectFill"/>
            <Label Text="Nom du produit" FontSize="Large"/>
            <Label Text="Description du produit..." FontSize="Small"/>
            <Label Text="Prix: 39.99€" FontAttributes="Bold"/>
            <!-- Ajoutez plus de détails selon vos besoins -->
            <Button Text="Ajouter au panier" />
            <!--Clicked="OnAddToCartClicked" à ajouter dans le bouton-->
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>